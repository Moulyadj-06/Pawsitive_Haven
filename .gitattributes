# Auto normalize text files
* text=auto

# Enforce LF for all files and ensure GitHub detects them in language stats

# JavaScript (React, Express)
*.js text eol=lf linguist-detectable=true  

# React JSX
*.jsx text eol=lf linguist-detectable=true  

# TypeScript (if used)
*.ts text eol=lf linguist-detectable=true   

# React with TypeScript
*.tsx text eol=lf linguist-detectable=true  

# JSON (configs, package.json, etc.)
*.json text eol=lf linguist-detectable=true  

# CSS (Bootstrap & general styles)
*.css text eol=lf linguist-detectable=true  

# HTML files
*.html text eol=lf linguist-detectable=true  

# Markdown (docs, README)
*.md text eol=lf linguist-detectable=true   

# Shell scripts (if used)
*.sh text eol=lf linguist-detectable=true   

# Keep binary files untouched
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.mp4 binary
*.mp3 binary

# Exclude dependencies and build artifacts from GitHub language stats
node_modules/** linguist-detectable=false  
dist/** linguist-detectable=false         
build/** linguist-detectable=false        
*.min.js linguist-detectable=false        
*.map linguist-detectable=false           
